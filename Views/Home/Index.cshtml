@{
    ViewData["Title"] = "Register User";
}
@model User

<div class="w-50 mx-auto">
    <h1 class="form-group">Welcome! Please register!</h1>
    <a class="btn" style="background-color: rebeccapurple;" href="Login">Login if already signed up</a>
    <form asp-action="Register">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" type="text">
            <span class="alert-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="FName"></label>
            <input class="form-control" asp-for="FName" type="text">
            <span class="alert-danger" asp-validation-for="FName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LName"></label>
            <input class="form-control" asp-for="LName" type="text">
            <span class="alert-danger" asp-validation-for="LName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" type="password">
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PassCon"></label>
            <input class="form-control" asp-for="PassCon" type="password">
            <span class="alert-danger" asp-validation-for="PassCon"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" name="submit" id="submit">
        </div>
    </form>
</div>
